<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/activity_main__img__img_main"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp90"
        android:layout_marginTop="@dimen/dp56"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_checklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_main__label__title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:text="@string/title_activity_name"
        android:textSize="@dimen/sp30"
        app:layout_constraintEnd_toEndOf="@id/activity_main__img__img_main"
        app:layout_constraintStart_toStartOf="@id/activity_main__img__img_main"
        app:layout_constraintTop_toBottomOf="@id/activity_main__img__img_main" />

    <EditText
        android:id="@+id/activity_main__input__email"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp56"
        android:layout_marginEnd="@dimen/dp16"
        android:autofillHints="@string/hind_email"
        android:hint="@string/hind_email"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__label__title_main" />

    <EditText
        android:id="@+id/activity_main__input__password"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:autofillHints="@string/hind_password"
        android:hint="@string/hind_password"
        android:inputType="textPassword"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/activity_main__input__email"
        app:layout_constraintStart_toStartOf="@id/activity_main__input__email"
        app:layout_constraintTop_toBottomOf="@id/activity_main__input__email" />

    <Button
        android:id="@+id/activity_main__btn__open"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/primary_color_dark"
        android:text="@string/title_btn_activity"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/activity_main__input__password"
        app:layout_constraintStart_toStartOf="@id/activity_main__input__password"
        app:layout_constraintTop_toBottomOf="@id/activity_main__input__password" />

    <ImageView
        android:id="@+id/activity_main__img__icon_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_baseline_camera"
        app:layout_constraintEnd_toEndOf="@id/activity_main__btn__open"
        app:layout_constraintStart_toStartOf="@id/activity_main__btn__open"
        app:layout_constraintTop_toBottomOf="@id/activity_main__btn__open" />

    <ImageView
        android:id="@+id/activity_main__img__icon_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp16"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_baseline_face"
        app:layout_constraintEnd_toStartOf="@id/activity_main__img__icon_instagram"
        app:layout_constraintTop_toTopOf="@id/activity_main__img__icon_instagram" />

    <ImageView
        android:id="@+id/activity_main__img__icon_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_baseline_feedback"
        app:layout_constraintStart_toEndOf="@id/activity_main__img__icon_instagram"
        app:layout_constraintTop_toTopOf="@id/activity_main__img__icon_instagram" />

</androidx.constraintlayout.widget.ConstraintLayout>